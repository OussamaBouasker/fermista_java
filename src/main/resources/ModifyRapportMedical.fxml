<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" styleClass="popup-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.fermista.controllers.ModifyRapportMedicalController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier Rapport Médical" styleClass="popup-title"/>
    
    <!-- Label pour les messages d'erreur -->
    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

    <GridPane vgap="15" hgap="10" styleClass="input-grid">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Numéro:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="numField" promptText="Numéro" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Race:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="raceField" promptText="Race" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Historique de maladie:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextArea fx:id="historiqueField" promptText="Historique de maladie (minimum 10 caractères)" 
                  wrapText="true" prefRowCount="3" styleClass="text-area-field" 
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Cas médical:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextArea fx:id="casMedicalField" promptText="Cas médical (minimum 10 caractères)" 
                  wrapText="true" prefRowCount="3" styleClass="text-area-field" 
                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Solution:" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextArea fx:id="solutionField" promptText="Solution (minimum 10 caractères)" 
                  wrapText="true" prefRowCount="3" styleClass="text-area-field" 
                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button fx:id="saveButton" text="Enregistrer" onAction="#handleSave" styleClass="save-button"/>
    </HBox>
</VBox> 