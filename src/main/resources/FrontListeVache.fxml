<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="663.0" prefWidth="939.0" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tn.fermista.controllers.FrontListeVacheController"
            stylesheets="@styles/ListeVache.css">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Include Navbar -->
        <fx:include source="Navbar.fxml" />
        
        <!-- Main Content wrapped in ScrollPane -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0;">
        <VBox spacing="20" style="-fx-padding: 20;">
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="982.0" spacing="10" style="-fx-background-color: transparent;">
                <TextField fx:id="searchField" promptText="Rechercher" style="-fx-pref-width: 400; -fx-padding: 8; -fx-background-radius: 20; -fx-border-radius: 20;" />
                <Button fx:id="applyButton" style="-fx-background-color: linear-gradient(to bottom, #FFA500, #FF8C00);                             -fx-text-fill: white;                             -fx-font-weight: bold;                            -fx-padding: 8 20;                            -fx-background-radius: 20;                            -fx-border-radius: 20;                            -fx-effect: dropshadow(gaussian, rgba(255,165,0,0.5), 10, 0, 0, 0);" text="Appliquer" />
            </HBox>
            <FlowPane fx:id="vacheListPane" hgap="30" prefWrapLength="1100" vgap="30" />
            <Pagination fx:id="pagination" maxPageIndicatorCount="5" pageCount="1" styleClass="custom-pagination" />
            <HBox alignment="TOP_RIGHT" prefHeight="37.0" prefWidth="776.0">
                <children>
                    <Button fx:id="addButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onAddButtonClick" onMouseEntered="#onAddButtonHover" onMouseExited="#onAddButtonExit" style="-fx-background-color: transparent;                            -fx-cursor: hand;                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 0);">
                        <graphic>
                            <ImageView fitHeight="51.0" fitWidth="58.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@images/plus_5963015.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </HBox>
        </VBox>
        </ScrollPane>
    </VBox>
</AnchorPane>
