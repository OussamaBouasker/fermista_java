<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="formContainer" prefHeight="400.0" prefWidth="600.0" spacing="10.0" styleClass="form-popup" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.fermista.controllers.UserFormPopupController">
    <children>
        <Label fx:id="formTitle" alignment="CENTER_RIGHT" prefHeight="51.0" prefWidth="406.0" styleClass="form-title" text="Ajout d'un utilisateur">
            <font>
                <Font name="Century Gothic Bold" size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Email:">
                            <font>
                                <Font name="System Bold Italic" size="12.0" />
                            </font></Label>
                        <TextField fx:id="txt_email" prefWidth="200.0" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Password:">
                            <font>
                                <Font name="Century Gothic Bold" size="12.0" />
                            </font></Label>
                        <TextField fx:id="txt_password" prefWidth="200.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="First Name:">
                            <font>
                                <Font name="System Bold Italic" size="12.0" />
                            </font></Label>
                        <TextField fx:id="txt_firstName" prefWidth="200.0" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Last Name:">
                            <font>
                                <Font name="Century Gothic Bold" size="12.0" />
                            </font></Label>
                        <TextField fx:id="txt_lastName" prefWidth="200.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Number:">
                            <font>
                                <Font name="Century Gothic Bold Italic" size="12.0" />
                            </font></Label>
                        <TextField fx:id="txt_number" prefWidth="200.0" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Role:">
                            <font>
                                <Font name="Century Gothic Bold Italic" size="12.0" />
                            </font></Label>
                        <ComboBox fx:id="roleComboBox" prefWidth="200.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="BOTTOM_CENTER" prefHeight="99.0" prefWidth="560.0" spacing="10.0">
            <children>
                <Button onAction="#handleSave" prefHeight="39.0" prefWidth="99.0" styleClass="btn-primary2" stylesheets="@style.css" text="Enregistrer">
                    <font>
                        <Font name="Century Gothic Bold Italic" size="12.0" />
                    </font></Button>
                <Button onAction="#handleCancel" prefHeight="38.0" prefWidth="97.0" styleClass="btn-danger" text="Annuler">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Button>
            </children>
        </HBox>
    </children>
</VBox>
