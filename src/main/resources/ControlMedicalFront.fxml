<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane prefHeight="683.0" prefWidth="1324.0" style="-fx-background-color: #f5f2ed" stylesheets="@styles/StyleNavbar.css, @styles/StyleCalendar.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.fermista.controllers.ControlMedicalFront">

    <fx:include source="Navbar.fxml" />
    
    <!-- ScrollPane pour rendre le contenu scrollable -->
    <ScrollPane fitToWidth="true" styleClass="main-scroll-pane" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- StackPane pour centrer le contenu -->
        <StackPane>
            <padding>
                <Insets top="20" bottom="40" left="20" right="20"/>
            </padding>
            
            <VBox alignment="TOP_CENTER" spacing="30" maxWidth="800" styleClass="main-container">
                <!-- Titre et icône -->
                <HBox alignment="CENTER" spacing="15">
                    <Text styleClass="title-text" text="CONSULTATIONS"/>
                </HBox>
                
                <!-- Barre de recherche et boutons -->
                <VBox spacing="20" alignment="CENTER">
                    <HBox spacing="15" alignment="CENTER">
                        <TextField fx:id="searchField" promptText="Nom de la consultation" prefWidth="300"/>
                        <Button text="Rechercher" onAction="#handleSearch" styleClass="search-button"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Ajouter une consultation" onAction="#handleAjouterConsultation" styleClass="action-button"/>
                        <Button text="Ajouter un rapport médical" onAction="#handleAjouterRapportMedical" styleClass="action-button"/>
                    </HBox>
                </VBox>
                
                <!-- Conteneur du calendrier -->
                <VBox fx:id="calendarContainer" styleClass="calendar-container" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </VBox>
            </VBox>
        </StackPane>
    </ScrollPane>

</AnchorPane>
