<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="778.0" prefWidth="1130.0" style="-fx-background-color: #f5f2ed;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.fermista.controllers.ResetPasswordController">
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Pane prefHeight="600" prefWidth="1050" style="-fx-background-color: transparent;">
            <AnchorPane layoutX="315.0" layoutY="16.0" prefWidth="500" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4); -fx-padding: 40px;">
                <VBox alignment="CENTER" spacing="30" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="40.0">
                    <Text fx:id="title" style="-fx-font-size: 45px; -fx-font-weight: bold; -fx-fill: rgb(129,196,8);" text="Reset Password" />
                    
                    <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333;" text="Enter your new password" />
                    
                    <PasswordField fx:id="passwordField" prefHeight="45.0" prefWidth="350.0" promptText="New Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: rgb(129,196,8); -fx-border-width: 2px; -fx-font-size: 14px; -fx-padding: 10px;" />
                    
                    <PasswordField fx:id="confirmPasswordField" prefHeight="45.0" prefWidth="350.0" promptText="Confirm Password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: rgb(129,196,8); -fx-border-width: 2px; -fx-font-size: 14px; -fx-padding: 10px;" />
                    
                    <Button fx:id="resetButton" onAction="#handleReset" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: rgb(129,196,8); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 16px;" text="Reset Password" />
                    
                    <Text fx:id="errorText" style="-fx-fill: red; -fx-font-size: 14px;" visible="false" />
                    
                    <Text fx:id="loginLink" onMouseClicked="#navigateToLogin" style="-fx-fill: rgb(129,196,8); -fx-cursor: hand; -fx-font-size: 16px; -fx-font-weight: bold;"  text="Retour Ã  la page de connexion" />
                </VBox>
            </AnchorPane>
        </Pane>
    </VBox>
</AnchorPane>
